{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(jest-)?react-native|@react-native-community|@react-navigation|?!@ngrx|(api)|ng-dynamic)"
  ],  
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
  }
}